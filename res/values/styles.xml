<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    
    <style name="editext_graybg" parent="android:Widget.EditText">
          <item name="android:background">@drawable/tv_round</item>
          <item name="android:drawablePadding">10dp</item>
          <item name="android:ems">10</item>
          <item name="android:inputType">textEmailAddress</item>
          <item name="android:paddingLeft">10dp</item>
          <item name="android:paddingRight">10dp</item>
          <item name="android:textSize">16sp</item>
     </style>
     
    <style name="forgot_pwd" parent="android:Widget.TextView">
        <item name="android:background">#00ffffff</item>
        
        
    </style>
     
    <style name="btn_large" parent="android:Widget.Button">
          <item name="android:background">@drawable/corner_border</item>
          <item name="android:textColor">#ffffff</item>
          <item name="android:textSize">15sp</item>
     </style>
     
    <style name="btn_large_fb" parent="android:Widget.Button">
          <item name="android:background">@drawable/corner_border_fb</item>
          <item name="android:textColor">#ffffff</item>
          <item name="android:textSize">15sp</item>
     </style>
     
    <style name="btn_large_g" parent="android:Widget.Button">
          <item name="android:background">@drawable/corner_border_gplus</item>
          <item name="android:textColor">#ffffff</item>
          <item name="android:textSize">15sp</item>
     </style>

</resources>
